@model IEnumerable<CosmeticsStore.Models.Product>
@{
    var admin = Session["admin"] as CosmeticsStore.Models.Customer;
}
@{
    ViewBag.Title = "Danh sách mỹ phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Heading -->
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 mb-2 text-gray-800">Danh sách mỹ phẩm</h1>
        <div>
            <a href="@Url.Action("Create","Products")" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm mới</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Image1)</th>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.Price)</th>
                        <th> @Html.DisplayNameFor(model => model.Discount)</th>
                        <th> @Html.DisplayNameFor(model => model.UpdateDate)</th>
                        <th> @Html.DisplayNameFor(model => model.InventoryNumber)</th>
                        <th> @Html.DisplayNameFor(model => model.SellCounts)</th>
                        <th> @Html.DisplayNameFor(model => model.ReviewCounts)</th>
                        <th> @Html.DisplayNameFor(model => model.Hot)</th>
                        <th> @Html.DisplayNameFor(model => model.New)</th>
                        <th> @Html.DisplayNameFor(model => model.Status)</th>

                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Image1)" alt="Ảnh sản phẩm" height="70" />
                        </td>
                        <td class="name">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @item.Price.Value.ToString("#,##")đ
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)%
                        </td>

                        <td>
                            @item.UpdateDate.Value.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SellCounts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReviewCounts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hot)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.New)
                        </td>
                        <td>
                            @if (item.Status != false)
                            {
                                <span>Đang Bán</span>
                            }
                            else
                            {
                                <span>Ngừng bán</span>

                            }
                        </td>
                        <td class="control">

                            <a href="@Url.Action("Details","Products" ,new { id=item.ProductID})" title="Chi Tiết" class="btn btn-info btn-circle btn-sm"><i class="fas fa-info-circle"></i></a>
                            <a href="@Url.Action("Edit","Products" ,new { id=item.ProductID})" title="Sửa" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                             <a href="@Url.Action("Delete", "Products", new { id = item.ProductID })" title="Xóa" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
