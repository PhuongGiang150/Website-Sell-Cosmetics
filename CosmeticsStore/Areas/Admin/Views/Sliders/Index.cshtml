@model IEnumerable<CosmeticsStore.Models.Slider>

@{
    ViewBag.Title = "Danh sách Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 mb-2 text-gray-800">Danh sách Slider</h1>
        <div>
            <a href="@Url.Action("Create","Sliders")" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm mới</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Image)</th>
                        <th> @Html.DisplayNameFor(model => model.DisplayOrder)</th>
                        <th> @Html.DisplayNameFor(model => model.Link)</th>
                        <th> @Html.DisplayNameFor(model => model.Info)</th>
                        <th> @Html.DisplayNameFor(model => model.Description)</th>
                        <th> @Html.DisplayNameFor(model => model.Status)</th>

                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <img class="img-table" src="
                            @Html.DisplayFor(modelItem => item.Image)
                                 " alt="Alternate Text" width="100px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (item.Status != false)
                            {
                                <span>Hiện</span>
                            }
                            else
                            {
                                <span>Ẩn</span>

                            }
                        </td>
                        <td class="control">
                            <a href="@Url.Action("Edit","Sliders" ,new { id=item.SliderID})" title="Sửa" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Delete", "Sliders", new { id = item.SliderID })" title="Xóa" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
