@model IEnumerable<CosmeticsStore.Models.Producer>
@{
    var admin = Session["admin"] as CosmeticsStore.Models.Customer;
}
@{
    ViewBag.Title = "Danh sách hãng mỹ phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 mb-2 text-gray-800">Danh sách hãng mỹ phẩm</h1>
        <div>
            <a href="@Url.Action("Create","Producers")" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm mới</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>


                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.DisplayOder)</th>
                        <th> @Html.DisplayNameFor(model => model.Info)</th>
                        <th> @Html.DisplayNameFor(model => model.Logo)</th>
                        <th> @Html.DisplayNameFor(model => model.Status)</th>

                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Info)
                            </td>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.Logo)" alt="Logo" height="50" />
                            </td>
                            <td>
                                @if (item.Status != false)
                                {
                                    <span>Đang bán</span>
                                }
                                else
                                {
                                    <span>Ngừng bán</span>

                                }
                            </td>
                            <td class="control">
                                <a href="@Url.Action("Edit","Producers" ,new { id=item.ProducerID})" title="Sửa" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                                 <a href="@Url.Action("Delete", "Producers", new { id = item.ProducerID })" title="Xóa" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
